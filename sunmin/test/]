#include <unistd.h>
#include <stdio.h>
#include <fcntl.h>

int				main(int argc, char **argv)
{
	int			pipe[2];
	int			fd;
	int			stat;
	pid_t		pid;

	fd = open("./ex.txt", O_RDWR | O_CREAT | O_TRUNC, 00777);
	stat = pipe(pipe);

	pid = fork();
	if (pid)		// 부모
	{
		closd(fd);
	}
	else			// 자식
	{

	}
	return (0);
}
